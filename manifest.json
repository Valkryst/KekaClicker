{
    "manifest_version": 3,

    "name": "KekaClicker",
    "short_name": "KekaClicker",
    "description": "Clock-in/out of Keka without leaving your current tab.",
    "version": "1.1",

    "action": {
        "default_popup":"./page/popup/extension/_.html",
        "default_icon": {
            "16": "resources/favicon/16.png",
            "48": "resources/favicon/48.png",
            "128": "resources/favicon/128.png",
            "512": "resources/favicon/512.png"
        }
    },
    "background": {
        "service_worker": "./js/background.js",
        "type": "module"
    },
    "icons": {
        "16": "resources/favicon/16.png",
        "48": "resources/favicon/48.png",
        "128": "resources/favicon/128.png",
        "512": "resources/favicon/512.png"
    },
    "options_page": "./page/options/_.html",

    "host_permissions": [
        "*://*.keka.com/*"
    ],
    "permissions": [
        "notifications",
        "scripting",
        "storage",
        "tabs"
    ]
}
